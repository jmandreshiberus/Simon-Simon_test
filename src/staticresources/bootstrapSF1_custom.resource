body .kaizen-header>h1>span {	
	color: #16325c;
	vertical-align: middle;
}
body div.row {
	font-size: 12px;
}
body div.row input.btn {
	background: #f4f5f7;
	border: 1px solid #e0e5ee;
	border-radius: 3px;
	color: #0070d2;
}
body div.row input.minibtn {
	width:20px;
	height:20px;
	padding:2px 3px 2px 2px;
}
body a {
	color: #222222;
	text-decoration: none;        
}
body a:hover {
	color: #222222;
	text-decoration: none;        
}
body table.table {
	border: 1px solid #e0e5ee;
}
body table.table thead {
	color: #16325c;
}
body table.table>tbody>tr>td{
	vertical-align: middle;
}
body div.datePicker {
	font-size: 2em;
}
body div.kaizen-container {
	background-color:white;
	width:98%;
	height:98%;
	border:1px solid #d8dde6;
	border-radius: 4px;
}